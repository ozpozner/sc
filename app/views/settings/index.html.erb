<% title "Settings" %>

<table border=1>
  <tr bgcolor="#cccccc">
    <th>Key</th>
    <th>Value</th>
    <th>Class</th>
    <th>Actions</th>
  </tr>
  <% for setting in @settings %>
    <tr>
      <td><%= setting.key %></td>
      <td><%= setting.value %></td>
      <td><%= setting.mytype %></td>
      <td><%= link_to "Show", setting ,class: "btn btn-small btn-primary"%>
      <%= link_to "Edit", edit_setting_path(setting) ,class: "btn btn-small btn-primary" %>
      <%= link_to "Destroy", setting, :confirm => 'Are you sure?', :method => :delete , class: "btn btn-small btn-secondary" %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Setting", new_setting_path ,class: "btn btn-big btn-primary" %> <%= link_to "init", '/init' ,class: "btn btn-big btn-primary" %></p>

